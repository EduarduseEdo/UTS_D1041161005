<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff444444">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="55dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_margin="10dp">


            <TextView
                android:id="@+id/judulService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginBottom="15dp"
                android:textSize="30dp"
                android:text="SERVICE"
                />

            <TextView
                android:id="@+id/contohService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="15dp"
                android:text="Contoh Syntax :"
                />

            <TextView
                android:id="@+id/syntaxService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="15dp"
                android:text="@string/syntaxService"
                />

            <TextView
                android:id="@+id/linkService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="15dp"
                android:text="Link Materi :"
                />

            <TextView
                android:id="@+id/linkService2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:justificationMode="inter_word"
                android:text="https://developer.android.com/guide/components/services?hl=id"
                />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
